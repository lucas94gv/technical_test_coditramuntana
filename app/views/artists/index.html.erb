<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center mb-4">Artists</h1>
          
      <div class="d-flex justify-content-end">
          <%= link_to 'New Artist', new_artist_path, class: "btn btn-primary mb-3" %>
      </div>

      <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @artists.each do |artist| %>
            <tr>
              <td><%= artist.name %></td>
              <td><%= artist.description %></td>
              <td>
                <%= link_to 'LPs', lps_path(artist_id: artist.id), class: "btn btn-primary btn-sm" %>
                <%= link_to 'Show', artist_path(artist), class: "btn btn-info btn-sm" %>
                <%= link_to 'Edit', edit_artist_path(artist), class: "btn btn-warning btn-sm" %>
                <%= link_to "Delete", artist_path(artist), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>