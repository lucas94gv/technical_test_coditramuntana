<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center mb-4">LPs</h1>

      <% if params[:artist_id].present? %>
        <%= link_to 'New LP', new_lp_path(artist_id: params[:artist_id]), class: "btn btn-primary mb-3" %>
      <% else %>
        <%= link_to 'New LP', new_lp_path, class: "btn btn-primary mb-3" %>
      <% end %>

      <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Artist</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @lps.each do |lp| %>
            <tr>
              <td><%= lp.name %></td>
              <td><%= lp.description %></td>
              <td><%= lp.artist.name %></td>
              <td>
                <%= link_to 'Show', lp_path(lp), class: "btn btn-info btn-sm" %>
                <%= link_to 'Edit', edit_lp_path(lp), class: "btn btn-warning btn-sm" %>
                <%= link_to 'Delete', lp_path(lp), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
                <%#= button_to "Delete", lp, method: :delete, class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>