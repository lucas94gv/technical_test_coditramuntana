<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center mb-4">Songs</h1>

      <%= link_to 'New Song', new_lp_song_path(@lp), class: "btn btn-primary mb-3" %>

      <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <tr>
            <th>Name</th>
            <th>LP</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @songs.each do |song| %>
            <tr>
              <td><%= song.name %></td>
              <td><%= song.lp.name %></td>
              <td>
                <%= link_to 'Show', lp_song_path(@lp, song), class: "btn btn-info btn-sm" %>
                <%= link_to 'Edit', edit_lp_song_path(@lp, song), class: "btn btn-warning btn-sm" %>
                <%= link_to "Delete", lp_song_path(@lp, song), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>