<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title"><%= @author.name %></h3>
        </div>
        <div class="card-body">
          
          <div class="mt-4">
            <%= link_to 'Edit', edit_author_path(@author), class: "btn btn-warning" %>
            <%= link_to 'Return', request.referer, class: "btn btn-secondary" %>
            <%= link_to "Delete", author_path(@author), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
          </div>
          <div class="card-body">
            <div class="card-header">
              <h4 class="card-title">Songs</h4>
            </div>
            <table class="table table-striped table-hover">
              <thead class="thead-dark">
                <tr>
                  <th>Name</th>
                  <th>LP</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @author.songs.each do |song| %>
                  <tr>
                    <td><%= song.name %></td>
                    <td><%= song.lp.name %></td>
                    <td>
                      <%= link_to 'Show', lp_song_path(song.lp, song), class: "btn btn-info btn-sm" %>
                      <%= link_to 'Edit', edit_lp_song_path(song.lp, song), class: "btn btn-warning btn-sm" %>
                      <%= link_to "Delete", lp_song_path(song.lp, song), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>