<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center mb-4">Authors</h1>

      <div class="d-flex justify-content-end">
        <%= link_to 'New Author', new_author_path, class: "btn btn-primary mb-3" %>
      </div>

      <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <tr>
            <th>Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @authors.each do |author| %>
            <tr>
              <td><%= author.name %></td>
              <td>
                <%= link_to 'Show', author_path(author), class: "btn btn-info btn-sm" %>
                <%= link_to 'Edit', edit_author_path(author), class: "btn btn-warning btn-sm" %>
                <%= link_to "Delete", author_path(author), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>